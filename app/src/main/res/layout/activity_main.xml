<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:orientation="vertical"
android:layout_height="fill_parent" >



<RadioGroup
    android:id="@+id/radiogroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/mainzise"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rbMain"
        style="@style/style_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/icon_zonglan"
        android:gravity="center"
        android:text="主页"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:background="@drawable/radio_group_selector" />
    <RadioButton
        android:id="@+id/rbEquipment"
        style="@style/style_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/icon_shebei"
        android:gravity="center"
        android:text="设备" android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/radio_group_selector" />


    <RadioButton
        android:id="@+id/rbTimer"
        style="@style/style_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/icon_yingyong"
        android:gravity="center"
        android:text="应用" android:drawablePadding="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/radio_group_selector" />
    <RadioButton
        android:id="@+id/rbMe"
        style="@style/style_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/icon_gerenzhongxin"
        android:gravity="center"
        android:text="我的" android:drawablePadding="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/radio_group_selector" />

</RadioGroup>

<android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/radiogroup" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#7e7e7e"
    android:layout_margin="10dp"
    android:visibility="gone"
    android:layout_below="@+id/viewPager"/>


</RelativeLayout>