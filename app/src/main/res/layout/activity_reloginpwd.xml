<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hf.hf_smartcloud.ui.activity.VerCodeActivity">
    <include layout="@layout/layout_title"/>


    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oldpwd"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:inputType="textPassword"
            android:hint="请输入旧密码"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newpwd"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/renewpwd"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="密码支持6--20位数字或字母"
            android:textColor="@color/hong"
            android:textSize="16sp" />
        <Button
            android:id="@+id/bt_reloginpwd_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_login_submit_lock"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="@string/register_done_hint"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:translationZ="0dp"
            tools:targetApi="lollipop" />
    </LinearLayout>

</LinearLayout>