<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:id="@+id/trust_country_code_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/ll_trust_countryCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trust_country_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/trust_iv_flag"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/trust_country_code_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/none_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/china"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="@color/gray" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_trust_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:hint="请输入手机号或邮箱"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textStyle="bold"

            android:text="手机验证码" />
        <EditText
            android:id="@+id/trust_yzcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="14sp"
            android:hint="请输入验证码"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/trust_daojs"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="获取验证码"
            android:textColor="@color/purple_button"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_shape_corner_gray"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btzfpwd_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_shape_corner_zise"/>
</LinearLayout>